<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/textureg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MultiplayerGameHost" >

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:background="@drawable/playarea" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/button1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="button1Clicked"
                 />

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="button2Clicked"
                 />

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="button3Clicked"
                />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/button4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="button4Clicked"
                 />

            <ImageButton
                android:id="@+id/button5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="button5Clicked"
                 />

            <ImageButton
                android:id="@+id/button6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="button6Clicked"
                 />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/button7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="button7Clicked"
                 />

            <ImageButton
                android:id="@+id/button8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="button8Clicked"
                 />

            <ImageButton
                android:id="@+id/button9"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="button9Clicked"
                 />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/statusView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tableLayout1"
        android:layout_alignLeft="@+id/tableLayout1"
        android:paddingLeft="28dp"
        android:layout_marginBottom="30dp"
        android:text="@string/YourTurn"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/statusView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:text="@string/PA"
        android:onClick="ResetButtonClicked" />

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tableLayout1"
        android:layout_alignParentBottom="true"
        android:onClick="RestartButtonClicked" />

    <Button
        android:id="@+id/button12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button11"
        android:layout_alignBottom="@+id/button11"
        android:layout_alignRight="@+id/tableLayout1"
        android:onClick="BackButtonClicked" />

    <Button
        android:id="@+id/button13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button11"
        android:layout_alignTop="@+id/button11"
        android:layout_toLeftOf="@+id/button12"
        android:layout_toRightOf="@+id/button11"
        android:text="G"
        android:onClick="getUpdateButtonClicked" />

</RelativeLayout>